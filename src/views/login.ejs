<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://unpkg.com/semantic-ui/dist/semantic.min.css">
    <script src="https://unpkg.com/jquery@3.3.1/dist/jquery.js"></script>
    <script src="https://unpkg.com/semantic-ui/dist/semantic.min.js"></script>
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .login-container {
            width: 400px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="ui segment">
            <h2 class="ui center aligned header" style="color: #128c7e;">
                <i class="whatsapp icon"></i>
                <div class="content">
                    WhatsApp Analytics
                    <div class="sub header">Multi-user analytics dashboard</div>
                </div>
            </h2>
            
            <form class="ui form" id="loginForm" onsubmit="handleLogin(event)">
                <div class="field">
                    <label>Email</label>
                    <input type="email" id="email" placeholder="Email" required>
                </div>
                <div class="field">
                    <label>Password</label>
                    <input type="password" id="password" placeholder="Password" required>
                </div>
                <button class="ui fluid large primary button" type="submit">
                    <i class="sign in icon"></i> Login
                </button>
            </form>
            
            <div class="ui message" id="errorMessage" style="display: none;">
                <p></p>
            </div>
            
            <div class="ui divider"></div>
            
            <div class="ui center aligned basic segment">
                Don't have an account? <a href="/register" style="color: #128c7e;">Register here</a>
            </div>
        </div>
    </div>

    <script>
        function handleLogin(event) {
            event.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Show loading
            const button = event.target.querySelector('button');
            button.classList.add('loading');
            
            fetch('/api/auth/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password })
            })
            .then(response => response.json())
            .then(data => {
                button.classList.remove('loading');
                
                if (data.status === 'success') {
                    window.location.href = '/dashboard';
                } else {
                    const errorDiv = document.getElementById('errorMessage');
                    errorDiv.style.display = 'block';
                    errorDiv.querySelector('p').textContent = data.error || 'Invalid email or password';
                }
            })
            .catch(error => {
                button.classList.remove('loading');
                console.error('Login error:', error);
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.style.display = 'block';
                errorDiv.querySelector('p').textContent = 'Login failed. Please try again.';
            });
        }
    </script>
</body>
</html>