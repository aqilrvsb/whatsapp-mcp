<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://unpkg.com/semantic-ui/dist/semantic.min.css">
    <script src="https://unpkg.com/jquery@3.3.1/dist/jquery.js"></script>
    <script src="https://unpkg.com/semantic-ui/dist/semantic.min.js"></script>
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        .register-container {
            width: 450px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="ui segment">
            <h2 class="ui center aligned header" style="color: #128c7e;">
                <i class="user plus icon"></i>
                <div class="content">
                    Create Account
                    <div class="sub header">Join WhatsApp Analytics Dashboard</div>
                </div>
            </h2>
            
            <form class="ui form" id="registerForm" onsubmit="handleRegister(event)">
                <div class="field">
                    <label>Full Name</label>
                    <input type="text" id="fullname" placeholder="Full Name" required>
                </div>
                <div class="field">
                    <label>Email</label>
                    <input type="email" id="email" placeholder="Email" required>
                </div>
                <div class="field">
                    <label>Password</label>
                    <input type="password" id="password" placeholder="Password" required minlength="6">
                </div>
                <div class="field">
                    <label>Confirm Password</label>
                    <input type="password" id="confirmPassword" placeholder="Confirm Password" required minlength="6">
                </div>
                
                <button class="ui fluid large primary button" type="submit">
                    <i class="user plus icon"></i> Create Account
                </button>
            </form>
            
            <div class="ui positive message" id="successMessage" style="display: none;">
                <i class="check circle icon"></i> Registration successful! Redirecting...
            </div>
            
            <div class="ui negative message" id="errorMessage" style="display: none;">
                <p></p>
            </div>
            
            <div class="ui divider"></div>
            
            <div class="ui center aligned basic segment">
                Already have an account? <a href="/login" style="color: #128c7e;">Login here</a>
            </div>
        </div>
    </div>

    <script>
        function handleRegister(event) {
            event.preventDefault();
            
            const fullname = document.getElementById('fullname').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            // Hide messages
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
            
            // Validate passwords match
            if (password !== confirmPassword) {
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.style.display = 'block';
                errorDiv.querySelector('p').textContent = 'Passwords do not match';
                return;
            }
            
            // Show loading
            const button = event.target.querySelector('button');
            button.classList.add('loading');
            
            fetch('/api/auth/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    fullname,
                    email,
                    password
                })
            })
            .then(response => response.json())
            .then(data => {
                button.classList.remove('loading');
                
                if (data.status === 'success') {
                    document.getElementById('successMessage').style.display = 'block';
                    setTimeout(() => {
                        window.location.href = '/dashboard';
                    }, 2000);
                } else {
                    const errorDiv = document.getElementById('errorMessage');
                    errorDiv.style.display = 'block';
                    errorDiv.querySelector('p').textContent = data.error || 'Registration failed';
                }
            })
            .catch(error => {
                button.classList.remove('loading');
                console.error('Registration error:', error);
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.style.display = 'block';
                errorDiv.querySelector('p').textContent = 'Registration failed. Please try again.';
            });
        }
    </script>
</body>
</html>