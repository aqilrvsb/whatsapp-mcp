<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f0f2f5;
        }
        
        .whatsapp-container {
            display: flex;
            height: 100vh;
            background: white;
        }
        
        .sidebar {
            width: 400px;
            border-right: 1px solid #e9edef;
            display: flex;
            flex-direction: column;
        }
        
        .sidebar-header {
            background: #f0f2f5;
            padding: 10px 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            min-height: 59px;
        }
        
        .search-box {
            background: #f0f2f5;
            padding: 7px 16px;
        }
        
        .search-box input {
            width: 100%;
            padding: 7px 32px 7px 12px;
            border: none;
            border-radius: 8px;
            background: white;
            font-size: 14px;
        }
        
        .chat-list {
            flex: 1;
            overflow-y: auto;
        }
        
        .chat-item {
            display: flex;
            padding: 12px 16px;
            cursor: pointer;
            border-bottom: 1px solid #f0f2f5;
        }
        .chat-item:hover {
            background: #f5f6f6;
        }
        
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mP8/5+hHgAHggJ/PchI7wAAAABJRU5ErkJggg==');
        }
        
        .main-header {
            background: #f0f2f5;
            padding: 10px 16px;
            display: flex;
            align-items: center;
            min-height: 59px;
            box-shadow: 0 1px 0 rgba(0,0,0,.08);
        }
        
        .messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px 40px;
        }
        
        .status-bar {
            background: #128c7e;
            color: white;
            padding: 8px 16px;
            text-align: center;
            font-size: 14px;
        }
        
        .status-bar.offline {
            background: #dc3545;
        }
        
        .empty-state {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: #667781;
        }
    </style>
</head>
<body>
    <div class="whatsapp-container">
        <!-- Status Bar -->
        <div class="status-bar <%= device.status === 'online' ? '' : 'offline' %>" style="position: absolute; width: 100%; z-index: 1000;">
            <% if (device.status === 'online') { %>
                <i class="bi bi-check-circle me-2"></i>Device Connected - Read Only Mode
            <% } else { %>
                <i class="bi bi-x-circle me-2"></i>Device Offline - Please connect first
            <% } %>
        </div>
        <!-- Sidebar -->
        <div class="sidebar" style="margin-top: 40px;">
            <div class="sidebar-header">
                <h6 class="mb-0">Chats</h6>
                <a href="/dashboard" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
            
            <div class="search-box">
                <input type="text" placeholder="Search or start new chat" id="searchInput">
            </div>
            
            <div class="chat-list" id="chatList">
                <% if (device.status === 'offline') { %>
                    <div class="text-center text-muted p-4">
                        <i class="bi bi-wifi-off" style="font-size: 48px;"></i>
                        <p class="mt-2">Device is offline</p>
                    </div>
                <% } else { %>
                    <div class="text-center text-muted p-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading chats...</p>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content" style="margin-top: 40px;">
            <div class="empty-state">
                <div>
                    <i class="bi bi-chat-text" style="font-size: 64px;"></i>
                    <h5 class="mt-3">WhatsApp Web - Read Only</h5>
                    <p>Select a chat to view messages</p>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        const deviceId = '<%= device.id %>';
        const isOnline = <%= device.status === 'online' %>;
        
        // Load chats if device is online
        if (isOnline) {
            loadChats();
        }
        
        async function loadChats() {
            try {
                const response = await fetch(`/api/messages/${deviceId}/chats`);
                if (response.ok) {
                    const chats = await response.json();
                    renderChats(chats);
                } else {
                    showError('Failed to load chats');
                }
            } catch (error) {
                console.error('Error loading chats:', error);
                showError('Error loading chats');
            }
        }                    <h6 class="mb-0">${chatName}</h6>
                </div>
                <div class="messages-container">
                    <div class="text-center text-muted">
                        <p>Message viewing coming soon!</p>
                    </div>
                </div>
                <div class="p-3 bg-light text-center">
                    <small class="text-muted">
                        <i class="bi bi-lock me-2"></i>Read-only mode - You cannot send messages
                    </small>
                </div>
            `;
        }
        
        // Search functionality
        document.getElementById('searchInput')?.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            const chatItems = document.querySelectorAll('.chat-item');
            
            chatItems.forEach(item => {
                const chatName = item.querySelector('h6').textContent.toLowerCase();
                item.style.display = chatName.includes(searchTerm) ? 'flex' : 'none';
            });
        });
    </script>
</body>
</html>